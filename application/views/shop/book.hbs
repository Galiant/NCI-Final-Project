<div class="card">
  <div class="row no-gutters">
    <aside class="col-lg-3 pt-5">
      <article class="text-center">
        <div class="img-big-wrap">
          <a href="/{{book.cover}}" data-fancybox="">
            <img src="/{{book.cover}}" class="img-fluid" alt="{{book.title}}">
          </a>
        </div>
      </article>
    </aside>
    <aside class="col-lg-9">
      <article class="p-5">
        <h3 class="title mb-4">{{book.title}}</h3>
        <div class="row">
          <div class="col-lg-8">
            <dl class="row">
              <dt class="col-lg-4">Author:</dt>
              <dd class="col-lg-8">{{book.author}}</dd>

              <dt class="col-lg-4">Publisher:</dt>
              <dd class="col-lg-8">{{book.publisher}}</dd>

              <dt class="col-lg-4">Category:</dt>
              <dd class="col-lg-8">{{book.category}}</dd>

              <dt class="col-lg-4">Year:</dt>
              <dd class="col-lg-8">{{book.year}}</dd>
            </dl>
          </div>
          <div class="col-lg-4">
            <div class="mb-3">
              <div class="price h2 text-warning">
                <em><span class="currency ">&euro;</span> <span class="num">{{book.price}}</span></em>
              </div>
            </div>
          </div>
        </div>

        <dl>
          <dt>Description:</dt>
          <dd>
            <p>{{book.description}}</p>
          </dd>
        </dl>

        <hr>

        <a href="/add-to-cart/{{book.id}}" class="btn btn-warning"> <i class="fas fa-shopping-cart"></i> Add to cart </a>
        <a href="/add-to-wishlist/{{book.id}}" class="btn btn-warning"> <i class="fas fa-heart"></i> Add to wishlist </a>
        <a href="/add-to-list/{{book.id}}" class="btn btn-warning"> <i class="fas fa-book"></i> Add to reading list </a>
      </article>
    </aside>
  </div>

  <div class="row ">
    <div class="container col-lg-8 offset-lg-2">
      <div class="card card-body">
        {{#if user}}
        <form method="post" action="/review/{{book.id}}">
          <div class="form-group">
            <label for="review"><h4>Add Review</h4></label>
            <textarea name="reviewBody" class="form-control" rows="5" id="review"></textarea>
          </div>
          <input type="submit" value="Submit" class="btn btn-warning"></input>
        </form>
        {{else}}
        <p>Please <a href="/user/login">login</a> to leave a review.</p>
        {{/if}} {{#each book.reviews}}
        <div class="row pt-4">
          <div class="col-lg-12">
            <div class="reviews">
              <div class="row blockquote review-item">
                <div class="col-md-4 text-center">
                  <img class="rounded-circle reviewer" src="http://standaloneinstaller.com/upload/avatar.png">
                  <div class="caption">
                    <small id="reviewUser">{{excerpt reviewUser.email 5}}</small>
                  </div>
                </div>
                <div class="col-md-8">
                  <p class="review-text">{{reviewBody}}</p>
                  <small class="review-date">Posted: {{dateFormat reviewDate 'DD-MM-YYYY, h:mm:ss a'}}</small>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
