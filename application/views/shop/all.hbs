<div class="py-5 bg-light">
  <div class="container">
    <div class="row">
    {{#each books}}
      <div class="col-md-3">
        <div class="card mb-3 shadow-sm">
          <img src="{{cover}}" class="card-img-top img-fluid" alt="Elevation" style="width: 100%; display: block;">
          <div class="card-body">
            <h6 class="card-text text-center">{{title}}</h6>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-success">Details</button>
                <a href="/add-to-cart"><button type="button" class="btn btn-sm btn-success">Add</button></a>
                <a href="/manage/edit/{{id}}"><button type="button" class="btn btn-sm btn-success">Edit</button></a>
                <form method="post" action="/all/{{id}}?_method=DELETE">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </div>
              <big class="text-muted">&euro;{{price}}</big>
            </div>
          </div>
        </div>
      </div>
      {{else}}
        <p>No Listed Books</p>
      {{/each}}
    </div>
  </div>
</div>