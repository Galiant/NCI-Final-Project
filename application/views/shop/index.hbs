<div class="jumbotron">
  <h2>The Book Boutique</h2>
  <p>Your place for a book</p>
</div>

<div class="row index-title">
  <div class="col">
    <h3>Bestsellers</h3>
  </div>
</div>

<div class="py-5 bg-light">
  <div class="container">
    <div class="row">
      {{#with books.[0]}}
      <div class="col-md-3">
        <div class="card mb-3 shadow-sm">
          <img src="/{{cover}}" class="card-img-top img-fluid" alt="{{title}}">
          <div class="card-body">
            <h5 class="card-text text-center">{{title}}</h5>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a href="/book/{{id}}"><button type="button" class="btn btn-sm btn-success">Details</button></a>
              </div>
              <big class="text-muted">&euro;{{price}}</big>
            </div>
          </div>
        </div>
      </div>
