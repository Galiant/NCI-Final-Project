<main class="page">
  <section class="cart dark">
    <div class="container">
      <div class="block-heading">
        <h2>Shopping Cart</h2>
      </div>
      <div class="content pb-4">
        {{# if books}}
        <div class="row">
          <div class="col-md-12 col-lg-8">
            {{# each books}}
            <div class="items">
              <div class="product">
                <div class="row">
                  <div class="col-md-2">
                    <img class="img-fluid mx-auto d-block image" src="{{ this.item.cover }}">
                  </div>
                  <div class="col-md-8">
                    <div class="info">
                      <div class="row">
                        <div class="col-md-5 product-name">
                          <div class="product-name">
                            <a href="/book/{{this.item._id}}">{{ this.item.title }}</a>
                            <div class="product-info">
                              <div><span class="author">{{ this.item.author }}</span></div>
                            </div>
                          </div>
                          <div>
                            <a href="/remove/{{this.item._id}}">Remove Item</a>
                          </div>
                        </div>
                        <div class="col-md-4">
                          <label for="quantity">Quantity:</label>
                          <div class="quantity">
                            <a href="/increase/{{this.item._id}}"><input type="button" value="+" class="plus"></a>
                            <input type="number" step="1" max="99" min="0" value="{{ this.qty }}" title="Qty" class="qty">
                            <a href="/reduce/{{this.item._id}}"><input type="button" value="-" class="minus"></a>
                          </div>
                        </div>
                        <div class="col-md-3 price">
                          <span>&euro; {{ this.price }}</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <h2 class="text-center p-4">Your shopping cart is empty.</h2>
          {{/if}}

          <div class="col-md-12 col-lg-4">
            <div class="summary">
              <h3>Summary</h3>
              <div class="summary-item"><span class="text">Subtotal</span><span class="price">{{ totalPrice}}</span></div>
              <div class="summary-item"><span class="text">Discount</span><span class="price">$0</span></div>
              <div class="summary-item"><span class="text">Shipping</span><span class="price">$0</span></div>
              <div class="summary-item"><span class="text">Total</span><span class="price">{{ totalPrice}}</span></div>
              <a href="/checkout"><button type="button" class="btn btn-warning btn-lg btn-block">Checkout</button></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
