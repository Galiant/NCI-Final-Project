<main class="page checkout-page">
  <section class="checkout-form dark">
    <div class="container">
      <div class="block-heading">
        <h2>Checkout</h2>
      </div>
      <form action="/checkout" method="post" id="checkout-form">
        <div class="checkout-summary">
          <div class="total">Your Total<span class="price">&euro; {{total}}</span></div>
        </div>
        <div id="checkout-error" class="alert alert-danger {{#if noError}}d-none{{/if}}">
          {{error_message}}
        </div>
        <div class="card-details">
          <h3 class="title">Shipping Details</h3>
          <div class="row">
            <div class="form-group col-lg-6">
              <label for="checkout-name">Name</label>
              <input name="checkoutname" id="checkout-name" type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="basic-addon1" required>
            </div>
            <div class="form-group col-lg-6">
              <label for="checkout-address">Address</label>
              <input name="checkoutaddress" id="checkout-address" type="text" class="form-control" placeholder="Address" aria-label="Address" aria-describedby="basic-addon1" required>
            </div>
          </div>
          <h3 class="title">Credit Card Details</h3>
          <div class="row">
            <div class="form-group col-lg-7">
              <label for="card-holder">Card Holder</label>
              <input id="card-holder" type="text" class="form-control" placeholder="Card Holder" aria-label="Card Holder" aria-describedby="basic-addon1" required>
            </div>
            <div class="form-group col-lg-5">
              <label for="">Expiration Date</label>
              <div class="input-group expiration-date">
                <input id="card-expiry-month" type="text" class="form-control" placeholder="MM" aria-label="MM" aria-describedby="basic-addon1" required>
                <span class="date-separator">/</span>
                <input id="card-expiry-year" type="text" class="form-control" placeholder="YY" aria-label="YY" aria-describedby="basic-addon1" required>
              </div>
            </div>
            <div class="form-group col-lg-8">
              <label for="card-number">Card Number</label>
              <input id="card-number" type="text" class="form-control" placeholder="Card Number" aria-label="Card Holder" aria-describedby="basic-addon1" required>
            </div>
            <div class="form-group col-lg-4">
              <label for="card-cvc">CVC</label>
              <input id="card-cvc" type="text" class="form-control" placeholder="CVC" aria-label="CVC" aria-describedby="basic-addon1" required>
            </div>
            <div class="form-group col-lg-12">
              <button type="submit" class="btn btn-success btn-block">Proceed</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </section>
</main>

<script src="https://js.stripe.com/v2/"></script>
<script src="/javascripts/checkout.js"></script>
