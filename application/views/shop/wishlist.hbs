<main class="page">
  <section class="cart dark">
    <div class="container">
      <div class="block-heading">
        <h2>Wishlist</h2>
      </div>
      <div class="content wishlist">
        {{# if books}}
        <div class="row">
          {{#each books}}
          <div class="col-md-3">
            <div class="card mb-3 shadow-sm">
              <img src="{{this.item.cover}}" class="card-img-top img-fluid" alt="Elevation" style="width: 100%; display: block;">
              <div class="card-body">
                <h6 class="card-text text-center"><a href="/book/{{this.item._id}}">{{ this.item.title }}</a></h6>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a href="/add-to-cart/{{this.item._id}}" class="btn btn-sm btn-success">Cart</a>
                    <a href="/removewishlist/{{this.item._id}}" class="btn btn-sm btn-success">Remove</a>
                  </div>
                  <big class="text-muted">&euro; {{ this.price }}</big>
                </div>
              </div>
            </div>
          </div>
          {{else}}
          <p>No Listed Books</p>
          {{/each}}
        </div>
      </div>
      {{else}}
      <h2 class="text-center">No items in wishlist</h2>
      {{/if}}
    </div>
  </section>
</main>
