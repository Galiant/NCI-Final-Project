<main class="page">
  <section class="cart dark">
    <div class="container">
      <div class="block-heading">
        <h2>My Orders</h2>
      </div>
      <div class="content">
        <div class="row">
          <div class="col-md-12 col-lg-12">
            {{#if orders}} {{# each orders}}
            <div class="card text-center m-4">
              <div class="card-body">
                <ul class="list-group">
                  {{# each this.items}}
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ this.item.title }} <em>{{ this.item.author }}</em> {{ this.qty }} Units
                    <span class="badge badge-warning">{{ this.price }}</span>
                  </li>
                  {{/each}}
                </ul>
              </div>
              <div class="card-footer">
                <strong>Total Price: &euro; {{ this.cart.totalPrice }}</strong>
              </div>
            </div>
            {{/each}} {{else}}
            <h2 class="text-center p-4">Your don't have any orders.</h2>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
